@{
    ViewData["Title"] = "Login to your account";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Login to your account</h4>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication" asp-action="Login">
                    <div class="form-group mb-3">
                        <label for="emailAddress">Email</label>
                        <input type="email" class="form-control" id="emailAddress" placeholder="yourEmail@email.com" />
                        <small id="emailAddressSm" class="form-text text-muted">We'll never share you email</small>
                    </div>
                    <div class="form-group mb-3">
                        <label for="emailPassword">Password</label>
                        <input type="password" class="form-control" id="emailPassword" placeholder="Enter your password"/>
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 btn-login">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>