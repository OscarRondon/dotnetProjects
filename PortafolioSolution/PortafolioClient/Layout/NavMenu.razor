<div class="d-flex flex-column">

    <section class="profile">
        <img class="img-fluid rounded-circle" src="img/profile-img.jpg" alt="">
        <h1 class="mt-3"><NavLink class="nav-link border border-light p-2" href="">Oscar Rondon</NavLink></h1>
        <div class="social-links text-center mt-3">
            <a href="#"><i class="bi bi-linkedin"></i></a>
            <a href="https://github.com/OscarRondon"><i class="bi bi-github"></i></a>
        </div>
    </section>

    <nav id="navbar" class="nav-menu navbar">
        <ul>
            <li>
                <a href="#hero" class="nav-link scrollto @(activeMenuOption == "Home"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("Home"))">
                    <i class="bi bi-house-door"></i><span>Home</span>
                </a>
            </li>
            <li>
                <a href="#about" class="nav-link scrollto  @(activeMenuOption == "About"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("About"))">
                    <i class="bi bi-person-check"></i><span>About</span>
                </a>
            </li>
            <li>
                <a href="#techstack" class="nav-link scrollto  @(activeMenuOption == "TechStack"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("TechStack"))">
                    <i class="bi bi-boxes"></i><span>Tech Stack</span>
                </a>
            </li>
            <li>
                <a href="#projects" class="nav-link scrollto  @(activeMenuOption == "Projects"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("Projects"))">
                    <i class="bi bi-terminal"></i><span>Projects</span>
                </a>
            </li>
            <li>
                <a href="#resume" class="nav-link scrollto  @(activeMenuOption == "Resume"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("Resume"))">
                    <i class="bi bi-file-earmark-check"></i><span>Resume</span>
                </a>
            </li>
            <li>
                <a href="#services" class="nav-link scrollto  @(activeMenuOption == "Services"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("Services"))">
                    <i class="bi bi-hdd-stack"></i><span>Services</span>
                </a>
            </li>
            <li>
                <a href="#contact" class="nav-link scrollto  @(activeMenuOption == "Contact"? "active" : "")" @onclick="@(() => ToogleActiveMenuOption("Contact"))">
                    <i class="bi bi-envelope-at"></i><span>Contact</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

@code {

    private string activeMenuOption = "Home";

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToogleActiveMenuOption(string menuOption)
    {
        activeMenuOption = menuOption;
    }
}
